<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/honeyview"
    android:layoutDirection="ltr">
    <TextView
        android:text="طبقه بندی  : "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_txt_dialog2"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textSize="24dp"
        android:textStyle="bold"/>
    <TextView
        android:text="بابا انشتین"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_txt_dialog2"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:text="خیلی باهوش"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_txt_dialog2"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:text="باهوش"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_txt_dialog2"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:text="خیلی خوب"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_txt_dialog2"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:text="خوب"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_txt_dialog2"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <TextView
        android:text="طبیعی"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_txt_dialog2"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout1">
        <TextView
            android:text="مغزت خسته است"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_txt_dialog2"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/textView1"/>
        <TextView
            android:text="در استانه پیر مغزی هستی"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_txt_dialog2"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/textView1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</LinearLayout>
